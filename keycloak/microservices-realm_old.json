{
  "realm": "microservices-realm",
  "enabled": true,
  "registrationAllowed": false,
  "sslRequired": "none",

  "clients": [
    {
      "clientId": "angular-ui",
      "name": "Angular Frontend UI",
      "publicClient": true,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:4200/*",
		"http://localhost:8090/login/oauth2/code/keycloak"
      ],
      "webOrigins": [
        "http://localhost:4200"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      }
    },
    {
      "clientId": "gateway-service",
      "name": "Spring Cloud Gateway",
      "secret": "gateway-secret-123",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "redirectUris": [
        "http://localhost:8080/*"
      ],
      "webOrigins": ["*"],
      "standardFlowEnabled": true
    }
  ],

  "roles": {
    "realm": [
      {
        "name": "USER",
        "description": "Standard application user"
      },
      {
        "name": "ADMIN",
        "description": "System administrator"
      }
    ]
  },

  "users": [
    {
      "username": "demo",
      "enabled": true,
      "email": "demo@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "demo",
          "temporary": false
        }
      ],
      "realmRoles": [
        "USER"
      ]
    }
  ]
}
